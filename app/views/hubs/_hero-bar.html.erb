<div class="homehero">
<div id="carousel-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
  	<% @latest_posts.each_with_index do |l, i|%>
    <li data-target="#carousel-generic" data-slide-to="<%=i%>"class="<% if i == 0 %>active<%end%>"></li>
    <%end%>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
  	<% @latest_posts.each_with_index do |l, i|%>
    <div class="item<%if i == 0  %> active<%end%>">
      <%= image_tag "#{l.coverphoto}" %>
      <div class="carousel-caption">
      	<%= link_to "/blog/posts/#{@latest_post.id}" do %><h1 class="ssregular whitefont"><%=l.title.downcase%></h1><%end%>
      </div>
    </div>

    <%end%>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-generic" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel-generic" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>
</div>

<div id="featured">

		
	<div class="featured-tile-large box cornerit">
	
	<div class="ribbon-wrapper-blue"></div>
	<%= link_to "/blog/posts/#{@latest_post.id}" do %><%= image_tag "#{@latest_post.coverphoto.url(:coverbar)}", :class=>"cornerit main" %><%end%>	
	<%= link_to "/blog/posts/#{@latest_post.id}" do %><div class="featured-text-large"><h1 class="ssregular"><%=@latest_post.title.downcase%></h1></div><%end%>
	</div>
	

<% @latest_locations.each_with_index do |l, i|%>
	<% if l.assets.present? %>
	<div class="featured-tile-small box cornerit">
	
	<%= link_to location_path("#{l.id}") do %><% l.assets.first(1).each do |a| %>
		<%= image_tag a.asset.url(:medium), :class=>"cornerit main"%>
	<%end end%>

	<%= link_to location_path("#{l.id}") do %><div class="featured-text-small <%if l.name.length > 10%>margin-64<%else%>margin-40<%end%>"><h2 class="ssregular"><%=l.name.downcase.strip%></h2></div><%end%>
	</div>
	<% if i == 4  then break end %>
	<%end%>
<%end%>	
	
	</div>
